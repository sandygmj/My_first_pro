   "source": [
    "TIRES = 10000000\n",
    "hits = 0\n",
    "for i in range(TIRES):\n",
    "    r = random()\n",
    "    x = -1 + 2*r\n",
    "    r = random()\n",
    "    y = -1 + 2*r\n",
    "    if x*x + y*y <= 1:\n",
    "        hits = hits +1\n",
    "\n",
    "piEstimate = 4*hits/TIRES\n",
    "print('The estimate of pi is:',piEstimate)"
   ]
